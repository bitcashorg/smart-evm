{
  "name": "smartsale",
  "version": "1.0.0",
  "description": "SmartSale Monorepo",
  "author": "Jun Dam <jun@bitcash.org>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo build --no-daemon",
    "dev": "turbo dev --no-daemon --parallel",
    "lint": "turbo lint --no-daemon",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.4.1",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "prisma": "latest",
    "turbo": "^1.11.2"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "hardhat/*"
    ],
    "nohoist": [
      "**/vite",
      "**/vite/**",
      "**/prisma",
      "**/prisma/**",
      "**/viem",
      "**/viem/**",
      "**/@prisma/client",
      "**/@prisma/client/**"
    ]
  },
  "packageManager": "bun@1.0.14",
  "dependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/express": "^4.17.21",
    "@types/pako": "^2.0.3"
  }
}
{
  "name": "smartsale",
  "version": "1.0.0",
  "description": "SmartSale Monorepo",
  "author": "Jun Dam <jun@bitcash.org>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo build --no-daemon",
    "dev": "turbo dev --no-daemon --parallel",
    "lint": "turbo lint --no-daemon",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@types/node": "^20.4.1",
    "eslint": "^8.44.0",
    "prettier": "^3.2.5",
    "prisma": "latest",
    "turbo": "^1.11.2",
    "@types/bn.js": "^5.1.5"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "hardhat/*"
    ],
    "nohoist": [
      "**/vite",
      "**/vite/**",
      "**/prisma",
      "**/prisma/**",
      "**/@prisma/client",
      "**/@prisma/client/**"
    ]
  },
  "packageManager": "bun@1.0.14"
}
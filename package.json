{
  "name": "smartsale",
  "version": "1.0.0",
  "description": "bitlauncher Monorepo",
  "author": "bitcar.og",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo build --no-daemon",
    "dev": "turbo dev --no-daemon --parallel",
    "lint": "turbo lint --no-daemon",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "hardhat/*"
    ],
    "nohoist": [
      "**/vite",
      "**/vite/**"
    ]
  },
  "packageManager": "bun@1.1.9",
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/node": "latest",
    "eslint": "^9.3.0",
    "prettier": "^3.2.5",
    "turbo": "^1.13.3"
  }
}